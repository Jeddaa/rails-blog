<div class="flex flex-col items-center justify-center h-screen">
  <p class="notice"><%= notice %></p>
  <p class="alert items-center"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, placeholder: "Name"%><br />
    </div>

    <div class="field mt-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
    </div>

    <div class="field mt-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password_confirmation" %>
    </div>

    <div class="actions mt-1">
      <button class="rounded border-2 p-2 mt-2">
        <%= f.submit "Sign up" %>
      </button>
    </div>
  <% end %>

   <div class="flex flex-col items-center justify-center gap-0 mt-2 p-0">
    <%= render "devise/shared/links" %>
  </div>
</div>

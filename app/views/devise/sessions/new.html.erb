<div class="flex flex-col items-center mx-9 justify-center h-screen">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
    </div>
    </br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-1">
      <button class="rounded border-2 p-2 mt-2">
       <%= f.submit "Log in" %>
       </button>
    </div>
  <% end %>
  <div class="flex flex-col items-center justify-center gap-0 mt-2 p-0">
    <%= render "devise/shared/links" %>
  </div>
</div>


<div class="flex flex-row py-5 gap-5">
  <div class="border border-black w-1/6 h-20">
        <img src=<%= @user.photo %> alt="trial">
  </div>
  <div class = "border rounded border-black flex flex-row p-3 justify-between w-5/6">
    <h1><%= @user.name %></h1>
    <p>Number of posts: <%= @user.posts_counter %></p>
  </div>
</div>
<div class = "border rounded border-black flex flex-col p-2 gap-3">
  <p>Bio</p>
  <p><%= @user.bio %></p>
</div>

  <div>
    <% @user.recent_posts.each_with_index do |post, index| %>
        <div class="border rounded border-black flex flex-col mt-3 p-3 gap-5">
          <button class="p-0 hover:bg-blue-700"><%= link_to "Post ##{index +1}", user_posts_path(@user) %></button>
          <p><%= post.text %></p>
          <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
        </div>
    <% end %>
  </div>
  <button class = "border rounded border-black my-4"> <%=link_to 'See all posts', users_path%></button>


